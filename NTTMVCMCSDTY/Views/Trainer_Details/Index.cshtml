@model NTTMVCMCSDTY.ListTrainervm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <h2>Trainer Details</h2>
    <div>

        <table style="width:80%" class="tbl table-striped">
            <thead>
                <tr>
                    <th>
                        TrainerID
                    </th>
                    <th>
                        TrainerName
                    </th>
                    <th>
                        Skills
                    </th>
                    <th>
                        Delete Record
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.Lst)
                {
                    <tr>
                        <td>
                            @rec.ID
                        </td>
                        <td>
                            @rec.Name
                        </td>
                        <td>
                            @rec.Skill
                        </td>
                        <td>
                            <a href="~/Trainer_Details/DeleteTrainer?ID=@rec.ID">Delete</a>
                        </td>
                        <td>
                            <a href="~/Trainer_Details/EditTrainer?ID=@rec.ID">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="~/Add_Trainer/Index">Add Trainer</a>
        <br />
        <a href="~/ADMIN_DASHBOARD/Index">Go to Home</a>
    </div>
</body>
</html>
